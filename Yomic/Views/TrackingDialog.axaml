<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Yomic.Views.TrackingDialog"
        Width="400" Height="500"
        WindowStartupLocation="CenterOwner"
        SystemDecorations="None"
        Background="Transparent"
        TransparencyLevelHint="AcrylicBlur">

    <Border Background="#CC1E1E2E" CornerRadius="12" BorderBrush="#313244" BorderThickness="1" Padding="20">
        <Grid RowDefinitions="Auto, *">
            <Grid ColumnDefinitions="*, Auto" Margin="0,0,0,20">
                <TextBlock Text="Tracking" FontSize="20" FontWeight="Bold" Foreground="White"/>
                <Button Grid.Column="1" Content="&#xE711;" FontFamily="Segoe Fluent Icons" 
                        Background="Transparent" Foreground="#CDD6F4" Click="OnCloseClick"/>
            </Grid>

            <StackPanel Grid.Row="1" Spacing="15">
                <!-- MyAnimeList Card -->
                <Border Background="#252535" CornerRadius="8" Padding="15">
                    <Grid RowDefinitions="Auto, Auto, Auto" ColumnDefinitions="50, *">
                        <Border Grid.RowSpan="3" Width="40" Height="40" CornerRadius="20" Background="#2E51A2" VerticalAlignment="Top">
                             <TextBlock Text="MAL" Foreground="White" FontWeight="Bold" FontSize="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        
                        <TextBlock Grid.Column="1" Text="MyAnimeList" Foreground="White" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="Score: 0/10" Foreground="#A6ADC8" FontSize="12"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="Status: Reading" Foreground="#FF9900" FontSize="12" Margin="0,5,0,0"/>
                        
                        <Button Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" 
                                Content="&#xE70F;" FontFamily="Segoe Fluent Icons" Background="Transparent" Foreground="White"/>
                    </Grid>
                </Border>

                <!-- Anilist Card -->
                <Border Background="#252535" CornerRadius="8" Padding="15">
                     <Grid RowDefinitions="Auto, Auto, Auto" ColumnDefinitions="50, *">
                        <Border Grid.RowSpan="3" Width="40" Height="40" CornerRadius="20" Background="#02A9FF" VerticalAlignment="Top">
                             <TextBlock Text="AL" Foreground="White" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        
                        <TextBlock Grid.Column="1" Text="Anilist" Foreground="White" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="Not Synced" Foreground="#6C7086" FontSize="12"/>
                        
                         <Button Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" 
                                Content="&#xE710;" FontFamily="Segoe Fluent Icons" Background="Transparent" Foreground="White"/>
                    </Grid>
                </Border>
                
                <Button Content="Add Service" HorizontalAlignment="Center" Background="Transparent" Foreground="#FF9900" Margin="0,10,0,0"/>

            </StackPanel>
        </Grid>
    </Border>
</Window>
