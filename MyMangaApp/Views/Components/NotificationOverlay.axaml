<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:MyMangaApp.ViewModels"
             x:Class="MyMangaApp.Views.Components.NotificationOverlay"
             x:DataType="vm:NotificationViewModel">
    
    <UserControl.Styles>
        <Style Selector="Border.Toast">
            <Setter Property="Background" Value="#181825"/>
            <Setter Property="BorderBrush" Value="#313244"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="0,0,0,30"/>
            <Setter Property="BoxShadow" Value="0 4 12 0 #40000000"/>
            <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.3" Easing="CubicEaseOut"/>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.3" Easing="CubicEaseOut"/>
                </Transitions>
            </Setter>
        </Style>
        
        <!-- Animations -->
        <Style Selector="Border.Toast[IsVisible=True]">
            <Setter Property="Opacity" Value="1"/>
            <Setter Property="RenderTransform" Value="translateY(0)"/>
        </Style>
        <Style Selector="Border.Toast[IsVisible=False]">
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="RenderTransform" Value="translateY(20px)"/>
        </Style>
    </UserControl.Styles>

    <Panel>
        <Border Classes="Toast" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                IsVisible="{Binding IsVisible}">
            <Grid ColumnDefinitions="Auto, *">
                <!-- Icon Container -->
                <Panel Grid.Column="0" Margin="0,0,12,0" VerticalAlignment="Center">
                    <!-- Success Icon (Network Connected: E774 Globe) -->
                    <Border Background="#20A6E3A1" Width="32" Height="32" CornerRadius="16" IsVisible="{Binding IsSuccess}">
                         <TextBlock Text="&#xE774;" FontFamily="Segoe Fluent Icons" Foreground="#A6E3A1" FontSize="16" 
                                    HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    
                    <!-- Error Icon (Network Offline: F384) -->
                    <Border Background="#20F38BA8" Width="32" Height="32" CornerRadius="16" IsVisible="{Binding IsError}">
                         <TextBlock Text="&#xF384;" FontFamily="Segoe Fluent Icons" Foreground="#F38BA8" FontSize="16" 
                                    HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    
                    <!-- Info Icon -->
                    <Border Background="#2089B4FA" Width="32" Height="32" CornerRadius="16" IsVisible="{Binding IsInfo}">
                         <TextBlock Text="&#xE946;" FontFamily="Segoe Fluent Icons" Foreground="#0078D7" FontSize="16" 
                                    HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Panel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding Message}" Foreground="#CDD6F4" FontSize="14" FontWeight="Medium"/>
                </StackPanel>
            </Grid>
        </Border>
    </Panel>
</UserControl>
