<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:MyMangaApp.ViewModels"
             x:Class="MyMangaApp.Views.WelcomeView"
             x:DataType="vm:WelcomeViewModel"
             Background="#1E1E2E">
    
    <UserControl.Styles>
        <Style Selector="Border.Active">
            <Setter Property="Background" Value="#FF9900"/>
            <Setter Property="Width" Value="25"/> <!-- Elongate active dot -->
        </Style>
        <Style Selector="Border">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.2"/>
                    <DoubleTransition Property="Width" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="*, Auto" Margin="40">
        
        <!-- Slides Carousel -->
        <Carousel Grid.Row="0" SelectedIndex="{Binding CurrentSlideIndex}">
            
            <!-- Slide 1: Intro -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20">
                <TextBlock Text="&#xE7F4;" FontFamily="Segoe Fluent Icons" FontSize="64" Foreground="#FF9900" HorizontalAlignment="Center"/>
                <TextBlock Text="Welcome to Yomic" FontSize="32" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="The ultimate manga reader for your desktop." FontSize="18" Foreground="#A6ADC8" HorizontalAlignment="Center"/>
                
                <Button Command="{Binding FinishCommand}" Content="Go to Library" 
                        Background="#FF9900" Foreground="#1E1E2E" Padding="40,15" CornerRadius="12" FontSize="16" FontWeight="Bold" Margin="0,40,0,0"
                        HorizontalAlignment="Center" MinWidth="200" HorizontalContentAlignment="Center">
                    <Button.Styles>
                         <Style Selector="Button:pointerover /template/ ContentPresenter">
                             <Setter Property="Background" Value="#B4BEFE"/>
                             <Setter Property="Foreground" Value="#1E1E2E"/>
                         </Style>
                    </Button.Styles>
                </Button>
            </StackPanel>
            
            <!-- Slide 2: Storage -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20">
                <TextBlock Text="&#xE8B7;" FontFamily="Segoe Fluent Icons" FontSize="64" Foreground="#FAB387" HorizontalAlignment="Center"/>
                <TextBlock Text="Where should we store your downloads?" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Choose a location for your manga library." FontSize="16" Foreground="#A6ADC8" HorizontalAlignment="Center"/>
                
                <Border Background="#313244" CornerRadius="8" Padding="15" Margin="0,20,0,0" Width="400">
                    <Grid ColumnDefinitions="*, Auto">
                        <TextBlock Text="D:/Komik/Downloads" VerticalAlignment="Center" Foreground="White"/>
                        <Button Grid.Column="1" Content="Change" Background="#FF9900" Foreground="White"/>
                    </Grid>
                </Border>
            </StackPanel>
            
            <!-- Slide 3: Extensions -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20">
                <TextBlock Text="&#xE74C;" FontFamily="Segoe Fluent Icons" FontSize="64" Foreground="#A6E3A1" HorizontalAlignment="Center"/>
                <TextBlock Text="Install your first extension" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                
                <StackPanel Orientation="Horizontal" Spacing="20" Margin="0,30,0,0">
                    <!-- MangaDex -->
                    <Border Background="#313244" CornerRadius="12" Padding="20" Width="150">
                        <StackPanel Spacing="15">
                            <TextBlock Text="M" FontWeight="Bold" FontSize="32" HorizontalAlignment="Center" Foreground="#FF6740"/>
                            <TextBlock Text="MangaDex" HorizontalAlignment="Center" Foreground="White"/>
                            <Button Content="Install" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Background="#FF9900" Foreground="White"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Bato -->
                    <Border Background="#313244" CornerRadius="12" Padding="20" Width="150">
                        <StackPanel Spacing="15">
                            <TextBlock Text="B" FontWeight="Bold" FontSize="32" HorizontalAlignment="Center" Foreground="#5865F2"/>
                            <TextBlock Text="Bato.to" HorizontalAlignment="Center" Foreground="White"/>
                             <Button Content="Install" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Background="#FF9900" Foreground="White"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
            
            <!-- Slide 4: Ready -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20">
                <TextBlock Text="&#xE73E;" FontFamily="Segoe Fluent Icons" FontSize="64" Foreground="#94E2D5" HorizontalAlignment="Center"/>
                <TextBlock Text="All Set!" FontSize="32" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="You are ready to start reading." FontSize="18" Foreground="#A6ADC8" HorizontalAlignment="Center"/>
                
                <Button Command="{Binding FinishCommand}" Content="Go to Library" 
                        Background="#FF9900" Foreground="#1E1E2E" Padding="30,15" CornerRadius="8" FontSize="16" FontWeight="Bold" Margin="0,30,0,0"/>
            </StackPanel>
            
        </Carousel>
        

        
    </Grid>
</UserControl>
