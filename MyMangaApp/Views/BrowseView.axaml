<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:MyMangaApp.ViewModels"
             x:Class="MyMangaApp.Views.BrowseView"
             x:DataType="vm:BrowseViewModel"
             Background="{DynamicResource PrimaryBackground}">

    <Panel>
        <Grid RowDefinitions="Auto, *" IsVisible="{Binding !IsOffline}">
            <Border Grid.Row="0" Padding="40,30,40,20">
                <StackPanel Spacing="25">
                    <StackPanel Orientation="Horizontal" Spacing="15" VerticalAlignment="Center">
                            <TextBlock Text="&#xE774;" FontFamily="Segoe Fluent Icons" FontSize="28" 
                                       Foreground="{DynamicResource PrimaryText}" VerticalAlignment="Center"
                                       RenderOptions.TextRenderingMode="Antialias"/>
                            <TextBlock Text="Browse Source" FontSize="32" FontWeight="Bold" 
                                       Foreground="{DynamicResource PrimaryText}" VerticalAlignment="Center"/>
                    </StackPanel>
                    


                    <!-- iOS-style Language Toggle -->
                    <Border Background="{DynamicResource SidebarBackground}" CornerRadius="8" HorizontalAlignment="Left" Padding="2">
                        <Grid ColumnDefinitions="Auto, Auto, Auto">
                            <Grid.Styles>
                                 <Style Selector="RadioButton.Toggle">
                                     <Setter Property="Background" Value="Transparent"/>
                                     <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
                                     <Setter Property="Padding" Value="30,8"/>
                                     <Setter Property="CornerRadius" Value="6"/>
                                     <Setter Property="FontSize" Value="14"/>
                                     <Setter Property="FontWeight" Value="SemiBold"/>
                                     <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                     <Setter Property="VerticalContentAlignment" Value="Center"/>
                                     <Setter Property="Cursor" Value="Hand"/>
                                     <Setter Property="Template">
                                         <ControlTemplate>
                                             <Border Name="RootBorder" Background="{TemplateBinding Background}" 
                                                     CornerRadius="{TemplateBinding CornerRadius}"
                                                     Padding="{TemplateBinding Padding}">
                                                 <ContentPresenter Content="{TemplateBinding Content}" 
                                                                   HorizontalAlignment="Center" 
                                                                   VerticalAlignment="Center"
                                                                   TextElement.Foreground="{TemplateBinding Foreground}"/>
                                             </Border>
                                         </ControlTemplate>
                                     </Setter>
                                 </Style>
                                 
                                 <!-- Checked State -->
                                 <Style Selector="RadioButton.Toggle:checked">
                                     <Setter Property="Background" Value="#0078D7"/>
                                     <Setter Property="Foreground" Value="#1E1E2E"/>
                                     <Setter Property="FontWeight" Value="Bold"/>
                                 </Style>

                                 <!-- Disable Hover Effects by forcing values matching state -->
                                 <!-- Unchecked Hover -->
                                 <Style Selector="RadioButton.Toggle:pointerover /template/ Border#RootBorder">
                                     <Setter Property="Background" Value="Transparent"/>
                                 </Style>
                                 <Style Selector="RadioButton.Toggle:pointerover /template/ ContentPresenter">
                                     <Setter Property="TextElement.Foreground" Value="{DynamicResource SecondaryText}"/>
                                 </Style>

                                 <!-- Checked Hover -->
                                 <Style Selector="RadioButton.Toggle:checked:pointerover /template/ Border#RootBorder">
                                     <Setter Property="Background" Value="#0078D7"/>
                                 </Style>
                                 <Style Selector="RadioButton.Toggle:checked:pointerover /template/ ContentPresenter">
                                     <Setter Property="TextElement.Foreground" Value="#1E1E2E"/>
                                 </Style>
                                 
                                 <!-- Animation -->
                                 <Style Selector="RadioButton.Toggle /template/ Border#RootBorder">
                                     <Setter Property="Transitions">
                                         <Transitions>
                                             <BrushTransition Property="Background" Duration="0:0:0.2"/>
                                         </Transitions>
                                     </Setter>
                                 </Style>
                            </Grid.Styles>

                            <RadioButton Grid.Column="0" Classes="Toggle" Content="ALL" 
                                         IsChecked="{Binding IsAll}" GroupName="Lang"/>
                            <RadioButton Grid.Column="1" Classes="Toggle" Content="ID" 
                                         IsChecked="{Binding IsId}" GroupName="Lang"/>
                            <RadioButton Grid.Column="2" Classes="Toggle" Content="EN" 
                                         IsChecked="{Binding IsEn}" GroupName="Lang"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Main Content (Online) -->
            <Panel Grid.Row="1">
                <ScrollViewer Padding="40,10,40,40" IsVisible="{Binding HasSources}">
                    <ItemsControl ItemsSource="{Binding Sources}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" ItemWidth="320" ItemHeight="90"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Background="Transparent" Padding="0" Margin="0,0,20,20"
                                        Command="{Binding $parent[UserControl].((vm:BrowseViewModel)DataContext).OpenSourceCommand}"
                                        CommandParameter="{Binding}">
                                    <Button.Styles>
                                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                                            <Setter Property="Background" Value="Transparent"/>
                                        </Style>
                                        <Style Selector="Button:pressed /template/ ContentPresenter">
                                            <Setter Property="Background" Value="Transparent"/>
                                        </Style>
                                    </Button.Styles>
                                    <!-- Card Background -->
                                    <Border CornerRadius="16" Padding="15" Width="300" Height="90"
                                            Background="{DynamicResource SidebarBackground}" BorderThickness="0" BorderBrush="{DynamicResource SeparatorBrush}">
                                        <Border.Styles>
                                            <Style Selector="Border">
                                                <Setter Property="Transitions">
                                                    <Transitions>
                                                        <BrushTransition Property="Background" Duration="0:0:0.2"/>
                                                        <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2" Easing="CubicEaseOut"/>
                                                        <BoxShadowsTransition Property="BoxShadow" Duration="0:0:0.2"/>
                                                    </Transitions>
                                                </Setter>
                                            </Style>
                                            <Style Selector="Border:pointerover">
                                                <Setter Property="Background" Value="{DynamicResource HoverBackground}"/>
                                                <Setter Property="RenderTransform" Value="scale(1.02)"/>
                                                <Setter Property="BoxShadow" Value="0 8 15 0 #30000000"/>
                                                <Setter Property="BorderBrush" Value="{DynamicResource SeparatorBrush}"/>
                                            </Style>
                                        </Border.Styles>

                                        <Grid ColumnDefinitions="Auto, *, Auto">
                                            <!-- Icon -->
                                            <Border Width="52" Height="52" CornerRadius="14" Background="{Binding IconColor}" Margin="0,0,15,0">
                                                 <Panel>
                                                     <TextBlock Text="{Binding IconText}" Foreground="{Binding IconForeground}" FontWeight="ExtraBold" FontSize="24"
                                                                HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                     <Image Source="{Binding IconBitmap}" Stretch="UniformToFill"/>
                                                 </Panel>
                                            </Border>
                                            
                                            <!-- Text -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Spacing="6">
                                                <TextBlock Text="{Binding Name}" Foreground="{DynamicResource PrimaryText}" FontWeight="Bold" FontSize="16"/>
                                                <Border Background="{DynamicResource OverlayBackground}" CornerRadius="8" Padding="10,3" HorizontalAlignment="Left" BorderThickness="0">
                                                    <TextBlock Text="{Binding Language}" Foreground="{DynamicResource SecondaryText}" FontSize="11" FontWeight="Bold"/>
                                                </Border>
                                                <!-- Optional: Add URL or other info if needed -->
                                            </StackPanel>

                                            <!-- Action Badge -->
                                            <Panel Grid.Column="2" VerticalAlignment="Center">
                                                <!-- Install Button or Status -->
                                                <Border Background="#0078D7" CornerRadius="20" Padding="12,6" IsVisible="{Binding !IsInstalled}">
                                                    <TextBlock Text="Install" Foreground="#1E1E2E" FontWeight="Bold" FontSize="12"/>
                                                </Border>
                                                <!-- Installed Icon? -->
                                                <TextBlock Text="&#xE73E;" FontFamily="Segoe Fluent Icons" Foreground="#A6E3A1" FontSize="24" IsVisible="{Binding IsInstalled}"
                                                           VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                            </Panel>
                                        </Grid>
                                    </Border>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                
                <!-- Empty State (Online but no sources found) -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20" IsVisible="{Binding !HasSources}">
                    <TextBlock Text="&#xE909;" FontFamily="Segoe Fluent Icons" FontSize="64" Foreground="{DynamicResource SidebarBackground}" HorizontalAlignment="Center"/>
                    <StackPanel Spacing="8">
                        <TextBlock Text="No Sources Found" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource PrimaryText}" HorizontalAlignment="Center"/>
                        <TextBlock Text="Try changing the language filter to see more sources." Foreground="{DynamicResource SecondaryText}" FontSize="14" HorizontalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Panel>
        </Grid>

        <!-- Offline State -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20" IsVisible="{Binding IsOffline}">
            <TextBlock Text="&#xEB55;" FontFamily="Segoe Fluent Icons" FontSize="64" Foreground="#F38BA8" HorizontalAlignment="Center"/>
            <StackPanel Spacing="8">
                <TextBlock Text="No Internet Connection" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource PrimaryText}" HorizontalAlignment="Center"/>
                <TextBlock Text="You are currently offline. Please check your network settings." Foreground="{DynamicResource SecondaryText}" FontSize="14" HorizontalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </Panel>
</UserControl>
