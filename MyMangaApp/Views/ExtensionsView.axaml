<?xml version="1.0" encoding="utf-8"?>
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:MyMangaApp.ViewModels"
             x:Class="MyMangaApp.Views.ExtensionsView"
             x:DataType="vm:ExtensionsViewModel"
             Background="{DynamicResource PrimaryBackground}">

    <UserControl.Styles>
        <Style Selector="Button.ExtBtn">
            <Setter Property="Background" Value="{DynamicResource SidebarBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style Selector="Button.ExtBtn:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource HoverBackground}"/>
        </Style>
        <Style Selector="TextBlock.Spin">
             <Setter Property="RenderTransformOrigin" Value="50%,50%"/>
             <Style.Animations>
                 <Animation Duration="0:0:1" IterationCount="Infinite">
                     <KeyFrame Cue="0%">
                         <Setter Property="RotateTransform.Angle" Value="0"/>
                     </KeyFrame>
                     <KeyFrame Cue="100%">
                         <Setter Property="RotateTransform.Angle" Value="360"/>
                     </KeyFrame>
                 </Animation>
             </Style.Animations>
        </Style>

        <!-- Loader Styles (Shared Rotating Circle) -->
        <Style Selector="Border.Loader">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="CornerRadius" Value="25"/>
            <Setter Property="BorderThickness" Value="6"/>
            <Setter Property="RenderTransform">
                 <RotateTransform />
            </Setter>
            <Setter Property="BorderBrush">
                <ConicGradientBrush>
                    <GradientStop Offset="0" Color="LightBlue"/>
                    <GradientStop Offset="0.75" Color="LightBlue"/>
                    <GradientStop Offset="0.7501" Color="Orange"/>
                    <GradientStop Offset="1" Color="Orange"/>
                </ConicGradientBrush>
            </Setter>
            <Style.Animations>
                <Animation Duration="0:0:1" IterationCount="Infinite"> 
                    <KeyFrame Cue="0%">
                        <Setter Property="RotateTransform.Angle" Value="0"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="RotateTransform.Angle" Value="360"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
    </UserControl.Styles>

    <Grid>
    <ScrollViewer Padding="40">
        <StackPanel Spacing="20">
            <!-- Header -->
            <StackPanel>
                <Grid ColumnDefinitions="*, Auto">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="15">
                            <TextBlock Text="&#xE74C;" FontFamily="Segoe Fluent Icons" FontSize="24" 
                                       Foreground="{DynamicResource PrimaryText}" VerticalAlignment="Center"
                                       RenderOptions.TextRenderingMode="Antialias"/>
                            <TextBlock Text="Extensions" FontSize="28" FontWeight="Bold" Foreground="{DynamicResource PrimaryText}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="Manage manga sources and extensions" Foreground="{DynamicResource SecondaryText}" Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- Search Box & Add Button -->
            <Grid ColumnDefinitions="*, Auto, Auto">
                <TextBox Grid.Column="0" Width="350" HorizontalAlignment="Left"
                         Text="{Binding SearchText}"
                         Watermark="Search extensions..." 
                         Background="{DynamicResource SidebarBackground}" Foreground="{DynamicResource PrimaryText}" 
                         CornerRadius="20" Padding="15,10"
                         BorderThickness="0" VerticalContentAlignment="Center">
                    <TextBox.Styles>
                        <Style Selector="TextBox:focus">
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                            <Setter Property="CaretBrush" Value="{DynamicResource PrimaryText}"/>
                        </Style>
                        <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
                            <Setter Property="Background" Value="{DynamicResource SidebarBackground}"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                        <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
                            <Setter Property="Background" Value="{DynamicResource HoverBackground}"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                         <Style Selector="TextBox:pointerover">
                             <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                         </Style>
                         <Style Selector="TextBox /template/ TextBlock#PART_Watermark">
                             <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
                         </Style>
                         <Style Selector="TextBox:focus /template/ TextBlock#PART_Watermark">
                             <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
                         </Style>
                         <Style Selector="TextBox:pointerover /template/ TextBlock#PART_Watermark">
                             <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
                         </Style>
                    </TextBox.Styles>
                    <TextBox.InnerRightContent>
                        <TextBlock Text="&#xE721;" FontFamily="Segoe Fluent Icons" Foreground="{DynamicResource SecondaryText}" 
                                   VerticalAlignment="Center" Margin="0,0,10,0"/>
                    </TextBox.InnerRightContent>
                </TextBox>
                
                <Button Grid.Column="2" Classes="ExtBtn" Margin="10,0,0,0"
                        Background="#FF9900" Foreground="#FFFFFF" FontWeight="Bold"
                        Command="{Binding AddExtensionCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="&#xE710;" FontFamily="Segoe Fluent Icons" VerticalAlignment="Center"/>
                        <TextBlock Text="Add" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Status Message -->
            <TextBlock Text="{Binding StatusMessage}" Foreground="#F38BA8" Margin="0,5,0,0" 
                       HorizontalAlignment="Right" FontSize="12" IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

            <!-- Unified Extensions List -->
            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding FilteredExtensions}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource SidebarBackground}" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                                <Grid ColumnDefinitions="Auto, *, Auto">
                                    <Border Width="48" Height="48" CornerRadius="8" Background="{Binding IconBackground}" 
                                            ClipToBounds="True" VerticalAlignment="Center">
                                        <Panel>
                                            <TextBlock Text="{Binding IconText}" FontSize="24" FontWeight="Bold" Foreground="{Binding IconColor}"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            <Image Source="{Binding IconBitmap}" Stretch="UniformToFill"/>
                                        </Panel>
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" Spacing="10">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryText}" FontSize="16"/>
                                            
                                            <!-- Version Badge -->
                                            <Border CornerRadius="4" Background="#A6E3A1" Padding="6,2">
                                                <TextBlock Text="{Binding Version}" Foreground="#1E1E2E" FontSize="10" FontWeight="Bold"/>
                                            </Border>
                                            
                                            <!-- Installed Badge -->
                                            <Border CornerRadius="4" Background="#FF9900" Padding="6,2" IsVisible="{Binding IsInstalled}">
                                                <TextBlock Text="INSTALLED" Foreground="#FFFFFF" FontSize="10" FontWeight="Bold"/>
                                            </Border>
                                        </StackPanel>
                                        <TextBlock Text="{Binding Description}" Foreground="{DynamicResource SecondaryText}" FontSize="12" Margin="0,4,0,0"/>
                                    </StackPanel>
                                    
                                    <!-- Actions -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                        
                                        <!-- Verify Button (Visible if Installed AND Supports Verification e.g. Mangabats) -->
                                        <Button Classes="ExtBtn" Background="#FAB387" Foreground="#1E1E2E" Content="Verify"
                                                IsVisible="{Binding CanVerify}"
                                                Command="{Binding $parent[UserControl].((vm:ExtensionsViewModel)DataContext).VerifyExtensionCommand}"
                                                CommandParameter="{Binding}"
                                                Margin="0,0,8,0"/>

                                        <!-- Uninstall Action Group -->
                                        <Panel IsVisible="{Binding IsInstalled}">
                                            <Button Classes="ExtBtn" Background="{DynamicResource HoverBackground}" Foreground="#F38BA8" Content="Uninstall"
                                                    IsVisible="{Binding !IsInstalling}"
                                                    Command="{Binding $parent[UserControl].((vm:ExtensionsViewModel)DataContext).ToggleInstallCommand}"
                                                    CommandParameter="{Binding}"/>

                                            <Button Classes="ExtBtn" Background="{DynamicResource HoverBackground}" Foreground="{DynamicResource SecondaryText}" 
                                                    IsVisible="{Binding IsInstalling}" IsHitTestVisible="False">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <Border Classes="Loader" Width="16" Height="16" BorderThickness="2" VerticalAlignment="Center"/>
                                                    <TextBlock Text="Uninstalling..." VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Button>
                                        </Panel>

                                        <!-- Install Action Group -->
                                        <Panel IsVisible="{Binding IsInstalled, Converter={x:Static BoolConverters.Not}}">
                                            <Button Classes="ExtBtn" Background="#FF9900" Foreground="#FFFFFF" Content="Install"
                                                    IsVisible="{Binding !IsInstalling}"
                                                    Command="{Binding $parent[UserControl].((vm:ExtensionsViewModel)DataContext).ToggleInstallCommand}"
                                                    CommandParameter="{Binding}"/>
                                            
                                            <Button Classes="ExtBtn" Background="{DynamicResource HoverBackground}" Foreground="{DynamicResource SecondaryText}" 
                                                    IsVisible="{Binding IsInstalling}" IsHitTestVisible="False">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <!-- Scaled Down Loader -->
                                                    <Border Classes="Loader" Width="16" Height="16" BorderThickness="2" VerticalAlignment="Center"/>
                                                    <TextBlock Text="Installing..." VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Button>
                                        </Panel>
                                        
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Empty State -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20" Margin="0,50,0,0" IsVisible="{Binding !HasExtensions}">
                <TextBlock Text="&#xE74C;" FontFamily="Segoe Fluent Icons" FontSize="64" Foreground="{DynamicResource SecondaryText}" HorizontalAlignment="Center"/>
                <StackPanel Spacing="8">
                    <TextBlock Text="No Extensions Found" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource PrimaryText}" HorizontalAlignment="Center"/>
                    <TextBlock Text="Try adjusting your search or add a new extension." Foreground="{DynamicResource SecondaryText}" FontSize="14" HorizontalAlignment="Center"/>
                </StackPanel>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>

    <!-- Loading Overlay -->
    <Border Background="{DynamicResource OverlayBackground}" IsVisible="{Binding IsBusy}">
        <Border Background="{DynamicResource SidebarBackground}" CornerRadius="12" Padding="30" HorizontalAlignment="Center" VerticalAlignment="Center"
                BoxShadow="0 10 30 0 #50000000">
            <StackPanel Spacing="15" HorizontalAlignment="Center">
                <Border Classes="Loader" HorizontalAlignment="Center"/>
                <TextBlock Text="Processing File..." FontWeight="Bold" FontSize="16" Foreground="{DynamicResource PrimaryText}" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Border>    
    </Grid>
</UserControl>
